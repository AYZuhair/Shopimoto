@page "/"
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@inject IProductService ProductService
@inject ICartService CartService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="row mb-5 fade-in">
    <div class="col-12 text-center">
        <h1 class="display-4 fw-bold text-primary mb-3">Welcome to Shopimoto</h1>
        <p class="text-muted lead">Discover the best products from our curated sellers.</p>
    </div>
</div>

@if (ShowAlert)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 2000">
        <div class="toast show align-items-center text-white bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-bold">
                    <i class="bi bi-check-circle-fill me-2"></i> @AlertMessage
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => ShowAlert = false"></button>
            </div>
        </div>
    </div>
}

@if (Products == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!Products.Any())
{
    <div class="text-center py-5">
        <p class="text-muted">No products available at the moment.</p>
    </div>
}
else
{
    <div class="row g-4 mb-5">
        @foreach (var product in Products)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 animate-fade-in">
                <div class="card h-100">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                        <span class="position-absolute top-0 end-0 m-3 badge shadow-sm">
                            @product.Category
                        </span>
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@product.Title</h5>
                        <p class="card-text text-truncate-2 mb-4" style="min-height: 3rem;">
                            @product.Description
                        </p>
                        
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <span class="h5 fw-bold text-primary mb-0">@product.Price.ToString("C")</span>
                            <small class="text-muted">@product.Stock left</small>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent border-0 p-3 pt-0">
                        <AuthorizeView Roles="Buyer">
                            <Authorized>
                                <button class="btn btn-primary w-100 shadow-sm" @onclick="() => AddToCart(product.Id)">
                                    Add to Cart
                                </button>
                            </Authorized>
                            <NotAuthorized>
                                <AuthorizeView Roles="Seller" Context="sellerContext">
                                    <Authorized>
                                         <button class="btn btn-secondary w-100" disabled>Seller Mode</button>
                                    </Authorized>
                                    <NotAuthorized>
                                        <a href="/login" class="btn btn-outline-primary w-100">Login to Buy</a>
                                    </NotAuthorized>
                                </AuthorizeView>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private IEnumerable<Shopimoto.Domain.Entities.Product>? Products;
    private bool ShowAlert = false;
    private string AlertMessage = "";

    protected override async Task OnInitializedAsync()
    {
        Products = await ProductService.GetProductsAsync();
    }

    private async Task AddToCart(Guid productId)
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
             var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
             if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid buyerId))
             {
                 await CartService.AddToCartAsync(buyerId, productId, 1);
                 
                 // Show Alert
                 AlertMessage = "Added to cart successfully!";
                 ShowAlert = true;
                 StateHasChanged();
                 
                 // Hide after 3 seconds
                 await Task.Delay(3000);
                 ShowAlert = false;
                 StateHasChanged();
             }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
        }
    }
}
