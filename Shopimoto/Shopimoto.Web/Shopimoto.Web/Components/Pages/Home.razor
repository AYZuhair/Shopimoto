@page "/"
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@using Shopimoto.Domain.DTOs
@using Shopimoto.Domain.Common
@inject IProductService ProductService
@inject ICartService CartService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4 px-lg-5 mt-4 fade-in">
    <!-- Search & Filter Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-5">
            <h4 class="fw-bold fs-4 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-shop text-primary"></i> Explore Products
            </h4>
        </div>
        <div class="col-md-7">
            <div class="bg-white p-2 rounded-pill shadow-sm d-flex align-items-center border">
                <div class="input-group input-group-sm border-end pe-2 me-2" style="max-width: 250px;">
                    <span class="input-group-text bg-transparent border-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-0 bg-transparent shadow-none" placeholder="Search..." 
                           @bind="SearchParams.SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
                </div>
                
                 <select class="form-select form-select-sm border-0 bg-transparent shadow-none border-end pe-4" style="width: auto; cursor: pointer;" @bind="SearchParams.Category" @bind:after="HandleSearch">
                    <option value="">All Categories</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Home">Home</option>
                    <option value="Books">Books</option>
                    <option value="Beauty">Beauty</option>
                </select>

                <select class="form-select form-select-sm border-0 bg-transparent shadow-none ps-3" style="width: auto; cursor: pointer;" @bind="SearchParams.SortBy" @bind:after="HandleSearch">
                    <option value="">Sort: Default</option>
                    <option value="PriceAsc">Low to High</option>
                    <option value="PriceDesc">High to Low</option>
                    <option value="Newest">Newest</option>
                    <option value="TopRated">Top Rated</option>
                </select>
                
                <button class="btn btn-primary rounded-circle ms-2 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 38px; height: 38px;" @onclick="HandleSearch">
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>

    @if (ShowAlert)
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 2000">
            <div class="toast show align-items-center text-white bg-dark border-0 shadow-lg rounded-3" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fw-bold d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2 text-success"></i> @AlertMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => ShowAlert = false"></button>
                </div>
            </div>
        </div>
    }

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (Products == null || !Products.Items.Any())
    {
        <div class="text-center py-5">
            <div class="icon-square bg-light text-muted rounded-circle p-4 d-inline-block mb-3">
                <i class="bi bi-search fs-1 opacity-50"></i>
            </div>
            <h4 class="mt-2 fw-bold text-dark">No products found</h4>
            <p class="text-muted">Try adjusting your search criteria.</p>
            <button class="btn btn-outline-dark rounded-pill px-4" @onclick="ClearFilters">Clear Filters</button>
        </div>
    }
    else
    {
        <div class="row g-4 mb-5">
            @foreach (var product in Products.Items)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 animate-fade-in">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden shadow-hover transition-all">
                        <div class="position-relative overflow-hidden group-hover-zoom">
                             <a href="/product/@product.Id" class="text-decoration-none d-block">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 280px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 280px;">
                                        <i class="bi bi-image text-muted fs-3"></i>
                                    </div>
                                }
                             </a>
                             <span class="position-absolute top-0 start-0 m-3 badge bg-white bg-opacity-90 text-dark shadow-sm rounded-pill fw-normal px-3 backdrop-blur">
                                @product.Category
                            </span>
                        </div>
                        
                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title text-truncate mb-1">
                                 <a href="/product/@product.Id" class="text-decoration-none text-dark fw-bold hover-primary">@product.Title</a>
                            </h5>
                            <p class="card-text text-truncate-2 mb-3 text-muted small" style="min-height: 2.5rem; line-height: 1.5;">
                                @product.Description
                            </p>
                            
                            <div class="mt-auto d-flex align-items-center justify-content-between">
                                <span class="fs-5 fw-bolder text-dark">@product.Price.ToString("C")</span>
                                <small class="text-muted bg-light px-2 py-1 rounded-pill x-small fw-bold">@product.Stock left</small>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-0 p-3 pt-0 pb-4">
                            <AuthorizeView Roles="Buyer">
                                <Authorized>
                                    <button class="btn btn-dark w-100 shadow-sm rounded-pill py-2" @onclick="() => AddToCart(product.Id)">
                                        <i class="bi bi-bag-plus me-1"></i> Add to Cart
                                    </button>
                                </Authorized>
                                <NotAuthorized>
                                    <AuthorizeView Roles="Seller" Context="sellerContext">
                                        <Authorized>
                                             <button class="btn btn-light w-100 text-muted rounded-pill" disabled>Seller View</button>
                                        </Authorized>
                                        <NotAuthorized>
                                            <a href="/login" class="btn btn-outline-primary w-100 rounded-pill">Login to Buy</a>
                                        </NotAuthorized>
                                    </AuthorizeView>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>
            }
        </div>

    <!-- Pagination -->
    @if (Products.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    <li class="page-item @(Products.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => ChangePage(Products.PageNumber - 1)">Previous</button>
                    </li>
                    @for (int i = 1; i <= Products.TotalPages; i++)
                    {
                        var pageInternal = i;
                        <li class="page-item @(Products.PageNumber == pageInternal ? "active" : "")">
                            <button class="page-link" @onclick="() => ChangePage(pageInternal)">@pageInternal</button>
                        </li>
                    }
                    <li class="page-item @(Products.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => ChangePage(Products.PageNumber + 1)">Next</button>
                    </li>
                </ul>
            </nav>
        </div>
    }
    }
</div>

<style>
    .shadow-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.08) !important;
    }
    .transition-all {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }
    .group-hover-zoom .card-img-top {
        transition: transform 0.5s ease;
    }
    .card:hover .card-img-top {
        transform: scale(1.03);
    }
    .hover-primary:hover {
        color: var(--bs-primary) !important;
    }
    .backdrop-blur {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }
    .x-small { font-size: 0.75rem; }
</style>

@code {
    private PagedResult<Shopimoto.Domain.Entities.Product>? Products;
    private ProductSearchParams SearchParams = new();
    private bool IsLoading = true;
    private bool ShowAlert = false;
    private string AlertMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        IsLoading = true;
        Products = await ProductService.SearchProductsAsync(SearchParams);
        IsLoading = false;
    }

    private async Task HandleSearch()
    {
        SearchParams.PageNumber = 1; // Reset to page 1 on new search
        await LoadProducts();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || (Products != null && page > Products.TotalPages)) return;
        SearchParams.PageNumber = page;
        await LoadProducts();
    }

    private async Task ClearFilters()
    {
        SearchParams = new ProductSearchParams();
        await LoadProducts();
    }

    private async Task AddToCart(Guid productId)
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
             var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
             if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid buyerId))
             {
                 await CartService.AddToCartAsync(buyerId, productId, 1);
                 
                 AlertMessage = "Added to cart successfully!";
                 ShowAlert = true;
                 StateHasChanged();
                 
                 await Task.Delay(3000);
                 ShowAlert = false;
                 StateHasChanged();
             }
        }
        else
        {
            NavigationManager.NavigateTo("/login");
        }
    }
}
