@page "/"
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@using Shopimoto.Domain.DTOs
@using Shopimoto.Domain.Common
@inject IProductService ProductService
@inject ICartService CartService
@inject ICategoryService CategoryService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container-fluid px-4 px-lg-5 mt-4 fade-in">
    <!-- Search & Filter Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-5">
            <h4 class="fw-bold fs-4 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-shop text-primary"></i> Explore Products
            </h4>
        </div>
        <div class="col-md-7">
            <div class="bg-white p-2 rounded-pill shadow-sm d-flex align-items-center border">
                <div class="input-group input-group-sm border-end pe-2 me-2" style="max-width: 250px;">
                    <span class="input-group-text bg-transparent border-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-0 bg-transparent shadow-none" placeholder="Search..." 
                           @bind="SearchParams.SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
                </div>
                
                 <select class="form-select form-select-sm border-0 bg-transparent shadow-none border-end pe-4" style="width: auto; cursor: pointer;" @bind="SearchParams.Category" @bind:after="HandleSearch">
                    <option value="">All Categories</option>
                    @if (Categories != null)
                    {
                        @foreach (var category in Categories)
                        {
                            <option value="@category.Name">@category.Name</option>
                        }
                    }
                </select>

                <select class="form-select form-select-sm border-0 bg-transparent shadow-none ps-3" style="width: auto; cursor: pointer;" @bind="SearchParams.SortBy" @bind:after="HandleSearch">
                    <option value="">Sort: Default</option>
                    <option value="PriceAsc">Low to High</option>
                    <option value="PriceDesc">High to Low</option>
                    <option value="Newest">Newest</option>
                    <option value="TopRated">Top Rated</option>
                </select>
                
                <button class="btn btn-primary rounded-circle ms-2 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 38px; height: 38px;" @onclick="HandleSearch">
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>

    @if (ShowAlert)
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 2000">
            <div class="toast show align-items-center text-white bg-dark border-0 shadow-lg rounded-3" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fw-bold d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2 text-success"></i> @AlertMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => ShowAlert = false"></button>
                </div>
            </div>
        </div>
    }

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (Products == null || !Products.Items.Any())
    {
        <div class="text-center py-5">
            <div class="icon-square bg-light text-muted rounded-circle p-4 d-inline-block mb-3">
                <i class="bi bi-search fs-1 opacity-50"></i>
            </div>
            <h4 class="mt-2 fw-bold text-dark">No products found</h4>
            <p class="text-muted">Try adjusting your search criteria.</p>
            <button class="btn btn-dark rounded-pill px-4" @onclick="ClearFilters">Clear Filters</button>
        </div>
    }
    else
    {
        <div class="row g-4 mb-5">
            @foreach (var product in Products.Items)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 animate-fade-in">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden shadow-hover transition-all">
                        <div class="position-relative overflow-hidden group-hover-zoom">
                             <a href="/product/@product.Id" class="text-decoration-none d-block">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 280px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 280px;">
                                        <i class="bi bi-image text-muted fs-1 opacity-25"></i>
                                    </div>
                                }
                                
                                <div class="position-absolute align-items-center d-flex gap-2 top-0 end-0 p-3 opacity-0 group-hover-opacity transition-all">
                                    <button class="btn btn-light rounded-circle shadow-sm" style="width: 40px; height: 40px;" @onclick="() => AddToWishlist(product.Id)" @onclick:preventDefault>
                                        <i class="bi bi-heart text-danger"></i>
                                    </button>
                                </div>
                            </a>
                             <span class="position-absolute top-0 start-0 m-3 badge bg-white bg-opacity-90 text-dark shadow-sm rounded-pill fw-normal px-3 backdrop-blur">
                                @product.Category
                            </span>
                        </div>
                        
                        <div class="card-body p-3">
                             <a href="/product/@product.Id" class="text-decoration-none text-dark">
                                <h6 class="card-title fw-bold mb-1 text-truncate">@product.Title</h6>
                             </a>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div>
                                    <span class="fw-bold text-dark fs-5">@product.Price.ToString("C")</span>
                                    <div class="small text-muted">by @product.SellerName</div>
                                </div>
                                <button class="btn btn-dark rounded-circle shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" @onclick="() => AddToCart(product.Id)">
                                    <i class="bi bi-bag-plus-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Products.TotalPages > 1)
        {
             <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center border-0 gap-2">
                    <li class="page-item @(Products.CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" @onclick="() => ChangePage(Products.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>
                    
                    @for (int i = 1; i <= Products.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(Products.CurrentPage == pageNumber ? "active" : "")">
                            <button class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center @(Products.CurrentPage == pageNumber ? "bg-dark text-white" : "bg-white text-dark")" style="width: 40px; height: 40px;" @onclick="() => ChangePage(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }

                    <li class="page-item @(Products.CurrentPage == Products.TotalPages ? "disabled" : "")">
                        <button class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" @onclick="() => ChangePage(Products.CurrentPage + 1)">
                             <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<style>
    .shadow-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.15)!important;
    }
    .transition-all {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }
    .group-hover-zoom .card-img-top {
        transition: transform 0.5s ease;
    }
    .card:hover .card-img-top {
        transform: scale(1.03);
    }
    .hover-primary:hover {
        color: var(--bs-primary) !important;
    }
    .backdrop-blur {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }
    .x-small { font-size: 0.75rem; }

    .group-hover-zoom:hover .card-img-top {
        transform: scale(1.05); 
        transition: transform 0.5s ease;
    }
    .group-hover-opacity {
        transition: opacity 0.3s ease;
    }
    .group-hover-zoom:hover .group-hover-opacity {
        opacity: 1 !important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
</style>

@code {
    private PaginatedResult<Product> Products;
    private IEnumerable<Category> Categories;
    private ProductSearchParams SearchParams = new();
    private bool IsLoading = true;
    private bool ShowAlert = false;
    private string AlertMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        Categories = await CategoryService.GetAllCategoriesAsync();
    }

    private async Task LoadProducts()
    {
        IsLoading = true;
        Products = await ProductService.GetProductsAsync(SearchParams);
        IsLoading = false;
    }

    private async Task HandleSearch()
    {
        SearchParams.PageNumber = 1; // Reset to page 1 on new search
        await LoadProducts();
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage < 1 || (Products != null && newPage > Products.TotalPages)) return;
        SearchParams.PageNumber = newPage;
        await LoadProducts();
    }

    private async Task ClearFilters()
    {
        SearchParams = new ProductSearchParams();
        await LoadProducts();
    }

    private async Task AddToCart(Guid productId)
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
             var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
             if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid userId))
             {
                 await CartService.AddToCartAsync(userId, productId, 1);
                 
                 AlertMessage = "Added to cart!";
                 ShowAlert = true;
                 StateHasChanged();
                 
                 await Task.Delay(3000);
                 ShowAlert = false;
                 StateHasChanged();
             }
        }
        else
        {
            NavigationManager.NavigateTo("/login", true);
        }
    }

     private async Task AddToWishlist(Guid productId)
    {
        // Placeholder for wishlist logic
         var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            AlertMessage = "Added to wishlist!"; // Implement actual logic
             ShowAlert = true;
             StateHasChanged();
             await Task.Delay(3000);
             ShowAlert = false;
        }
        else
        {
             NavigationManager.NavigateTo("/login", true);
        }
    }
}
