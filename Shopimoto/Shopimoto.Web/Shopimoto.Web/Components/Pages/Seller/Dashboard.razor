@page "/seller/dashboard"
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@attribute [Authorize(Roles = "Seller")]
@rendermode InteractiveServer
@inject IProductService ProductService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<div class="row mb-5 fade-in">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                 <h2 class="display-5 fw-bold text-primary mb-1">Seller Dashboard</h2>
                 <p class="text-muted lead mb-0">Manage your products and view sales.</p>
            </div>
            <a href="/seller/products/add" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm px-4 py-3">
                <i class="bi bi-plus-lg"></i> Add New Product
            </a>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-5 animate-fade-in">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 overflow-hidden text-white" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));">
            <div class="card-body p-4 position-relative">
                <i class="bi bi-box-seam position-absolute end-0 bottom-0 mb-n2 me-3 opacity-25" style="font-size: 5rem;"></i>
                <h6 class="text-uppercase small fw-bold text-white-50">Total Products</h6>
                <h2 class="display-4 fw-bold mb-0">@(products?.Count ?? 0)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
             <div class="card-body p-4">
                <div class="d-flex align-items-center mb-2">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-3">
                         <i class="bi bi-currency-dollar fs-4"></i>
                    </div>
                     <h6 class="text-uppercase small fw-bold text-muted mb-0">Total Revenue</h6>
                </div>
                <h3 class="fw-bold mb-0">@TotalRevenue.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
             <div class="card-body p-4">
                <div class="d-flex align-items-center mb-2">
                    <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-3">
                         <i class="bi bi-cart-check fs-4"></i>
                    </div>
                     <h6 class="text-uppercase small fw-bold text-muted mb-0">Orders</h6>
                </div>
                 <h3 class="fw-bold mb-0">@TotalOrders</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow border-0 overflow-hidden animate-fade-in" style="animation-delay: 0.1s;">
    <div class="card-header bg-white border-0 py-3 px-4">
        <h5 class="fw-bold mb-0 text-primary">Your Products</h5>
    </div>
    
    @if (products == null)
    {
         <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!products.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-box-seam text-muted fs-1 mb-3 d-block"></i>
            <h6 class="text-muted fw-bold">No products yet</h6>
            <p class="text-muted small">Start selling by adding your first product.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0 text-secondary small fw-bold text-uppercase">Product</th>
                        <th class="py-3 border-0 text-secondary small fw-bold text-uppercase">Price</th>
                        <th class="py-3 border-0 text-secondary small fw-bold text-uppercase">Stock</th>
                         <th class="py-3 border-0 text-secondary small fw-bold text-uppercase">Status</th>
                        <th class="pe-4 py-3 border-0 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Title" class="rounded-3 me-3 border" style="width: 48px; height: 48px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                         <div class="rounded-3 me-3 bg-light d-flex align-items-center justify-content-center text-muted border" style="width: 48px; height: 48px;">
                                             <i class="bi bi-image"></i>
                                         </div>
                                    }
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark">@product.Title</h6>
                                        <small class="text-muted">@product.Category</small>
                                    </div>
                                </div>
                            </td>
                            <td class="py-3 fw-bold text-dark">@product.Price.ToString("C")</td>
                            <td class="py-3">
                                @if(product.Stock > 10)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">@product.Stock in stock</span>
                                }
                                else if(product.Stock > 0)
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">@product.Stock low stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Out of Stock</span>
                                }
                            </td>
                            <td class="py-3">
                                <span class="badge bg-primary bg-opacity-10 text-primary">Active</span>
                            </td>
                            <td class="pe-4 py-3 text-end">
                                <button class="btn btn-sm btn-light border shadow-sm text-danger" @onclick="() => DeleteProduct(product.Id)" title="Delete Product">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Product>? products;
    private Guid currentUserId;

    private async Task DeleteProduct(Guid productId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this product?"))
        {
            await ProductService.DeleteProductAsync(productId);
            products = await ProductService.GetSellerProductsAsync(currentUserId);
        }
    }

    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] IOrderService OrderService { get; set; } = default!;

    // Stats
    private decimal TotalRevenue = 0;
    private int TotalOrders = 0;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid userId))
            {
                currentUserId = userId;
                
                // Load Products
                products = await ProductService.GetSellerProductsAsync(currentUserId);

                // Load Orders & Calc Revenue
                var orders = await OrderService.GetSellerOrdersAsync(currentUserId);
                if (orders != null)
                {
                    TotalOrders = orders.Count();
                    
                    // Calculate revenue only for THIS seller's items
                    foreach(var order in orders)
                    {
                        var myItems = order.Items.Where(i => i.Product?.SellerId == currentUserId);
                        foreach(var item in myItems)
                        {
                            TotalRevenue += item.UnitPrice * item.Quantity;
                        }
                    }
                }
            }
        }
    }
}
