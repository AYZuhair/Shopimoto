@page "/seller/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@attribute [Authorize(Roles = "Seller")]
@layout Shopimoto.Web.Components.Layout.SellerLayout
@inject IOrderService OrderService
@inject IProductService ProductService
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<div class="container-fluid px-4 mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
             <h4 class="fw-bold mb-0 text-dark">Seller Dashboard</h4>
             <p class="text-muted small mb-0">Overview of your store performance</p>
        </div>
        <a href="/seller/orders" class="btn btn-dark rounded-pill px-4 shadow-sm">
            <i class="bi bi-box-seam me-2"></i> Manage Orders
        </a>
    </div>

    <!-- Sales Statistics Cards -->
    <div class="row g-3 mb-4">
        <!-- Earnings -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted small fw-bold text-uppercase mb-1 tracking-wide">Total Earnings</p>
                        <h2 class="fw-bolder mb-0 text-dark">@TotalRevenue.ToString("C")</h2>
                    </div>
                    <div class="icon-square bg-light text-primary rounded-3 p-3">
                         <i class="bi bi-wallet2 fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders -->
        <div class="col-md-4">
             <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                     <div>
                        <p class="text-muted small fw-bold text-uppercase mb-1 tracking-wide">Total Orders</p>
                        <h2 class="fw-bolder mb-0 text-dark">@TotalOrders</h2>
                    </div>
                    <div class="icon-square bg-light text-success rounded-3 p-3">
                         <i class="bi bi-bag-check fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        
         <!-- Products -->
        <div class="col-md-4">
             <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                     <div>
                        <p class="text-muted small fw-bold text-uppercase mb-1 tracking-wide">Active Products</p>
                        <h2 class="fw-bolder mb-0 text-dark">@(Products?.Count ?? 0)</h2>
                    </div>
                    <div class="icon-square bg-light text-info rounded-3 p-3">
                         <i class="bi bi-tags fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Products List -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div class="card-header bg-white py-4 px-4 border-bottom border-light d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">My Products</h5>
            <a href="/seller/products/add" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                <i class="bi bi-plus-lg me-1"></i> Add Product
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase x-small fw-bold border-0">Product</th>
                        <th class="py-3 text-secondary text-uppercase x-small fw-bold border-0">Category</th>
                        <th class="py-3 text-secondary text-uppercase x-small fw-bold border-0">Price</th>
                        <th class="py-3 text-secondary text-uppercase x-small fw-bold border-0">Stock</th>
                        <th class="pe-4 py-3 text-end text-secondary text-uppercase x-small fw-bold border-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Products == null)
                    {
                        <tr><td colspan="5" class="text-center py-5"><span class="spinner-border spinner-border-sm text-primary"></span></td></tr>
                    }
                    else if (!Products.Any())
                    {
                         <tr>
                             <td colspan="5" class="text-center py-5">
                                 <div class="text-muted mb-2"><i class="bi bi-box fs-1 opacity-50"></i></div>
                                 <p class="text-muted">No products found. Start selling today!</p>
                             </td>
                         </tr>
                    }
                    else
                    {
                        @foreach (var product in Products)
                        {
                            <tr class="border-light">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" class="rounded-3 me-3 border-0 bg-light" width="48" height="48" style="object-fit: cover;">
                                        }
                                        else
                                        {
                                             <div class="rounded-3 me-3 bg-light d-flex align-items-center justify-content-center border-0" style="width: 48px; height: 48px;">
                                                <i class="bi bi-image text-muted small"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold text-dark">@product.Title</div>
                                            <div class="small text-muted text-truncate" style="max-width: 250px;">@product.Description</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill fw-normal px-3 py-1">
                                        @product.Category
                                    </span>
                                </td>
                                <td class="py-3 fw-bold text-dark">@product.Price.ToString("C")</td>
                                <td class="py-3">
                                    @if(product.Stock < 5)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill fw-normal px-2">@product.Stock (Low)</span>
                                    }
                                    else
                                    {
                                        <span class="text-dark">@product.Stock</span>
                                    }
                                </td>
                                <td class="pe-4 text-end py-3">
                                    <a href="/seller/products/edit/@product.Id" class="btn btn-sm btn-link text-primary p-0 me-3" title="Edit">
                                        Edit
                                    </a>
                                    <button class="btn btn-sm btn-link text-danger p-0" @onclick="() => DeleteProduct(product.Id)" title="Delete">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .tracking-wide { letter-spacing: 0.1em; }
    .x-small { font-size: 0.75rem; }
    .bg-light { background-color: #f8f9fa !important; }
</style>

@if (ShowDeleteConfirmation)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Product</h5>
                    <button type="button" class="btn-close" @onclick="() => ShowDeleteConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this product? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => ShowDeleteConfirmation = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Product>? Products;
    private List<Order> RecentOrders = new();
    private decimal TotalRevenue = 0;
    private int TotalOrders = 0;
    
    private bool ShowDeleteConfirmation = false;
    private Guid ProductToDeleteId;
    private Guid SellerId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out SellerId))
            {
                await LoadData();
            }
        }
    }

    private async Task LoadData()
    {
        Products = await ProductService.GetSellerProductsAsync(SellerId);
        
        // In a real app we'd have a specialized query for stats to avoid fetching all orders
        var orders = await OrderService.GetSellerOrdersAsync(SellerId);
        TotalOrders = orders.Count();
        
        // Calculate revenue (simplified: summing total of orders where this seller has items)
        // Note: Ideally we should only sum items belonging to THIS seller if orders are mixed,
        // but for now assuming order splitting or simple logic
        // Let's iterate items to be precise if we can, but OrderService.GetSellerOrdersAsync usually returns Orders containing items from that seller.
        
        TotalRevenue = 0;
        foreach(var order in orders)
        {
            // Calculate revenue from items belonging to this seller
             foreach(var item in order.Items)
             {
                 if (item.Product?.SellerId == SellerId)
                 {
                     TotalRevenue += item.UnitPrice * item.Quantity;
                 }
             }
        }
    }

    private void DeleteProduct(Guid id)
    {
        ProductToDeleteId = id;
        ShowDeleteConfirmation = true;
    }

    private async Task ConfirmDelete()
    {
        await ProductService.DeleteProductAsync(ProductToDeleteId);
        ShowDeleteConfirmation = false;
        await LoadData();
    }
}
