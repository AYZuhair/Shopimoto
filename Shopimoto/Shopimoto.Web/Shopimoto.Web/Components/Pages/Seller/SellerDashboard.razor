@page "/seller/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@attribute [Authorize(Roles = "Seller")]
@layout Shopimoto.Web.Components.Layout.SellerLayout
@inject IOrderService OrderService
@inject IProductService ProductService
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<div class="row mb-4 animate-fade-in d-flex justify-content-between align-items-center">
    <div class="col-auto">
        <h1 class="h3 mb-0 text-gray-800">Dashboard Overview</h1>
    </div>
    <div class="col-auto">
        <a href="/seller/orders" class="btn btn-primary shadow-sm">
            <i class="bi bi-box-seam me-1"></i> Manage Orders
        </a>
    </div>
</div>

<!-- Sales Statistics Cards -->
<div class="row mb-4 animate-fade-in">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2 border-0 border-start border-4 border-primary">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Earnings</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@TotalRevenue.ToString("C")</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-calendar-check fs-2 text-gray-300 text-muted opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Annual) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2 border-0 border-start border-4 border-success">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Orders</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@TotalOrders</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-currency-dollar fs-2 text-gray-300 text-muted opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
     <!-- Products Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2 border-0 border-start border-4 border-info">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Active Products</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@(Products?.Count ?? 0)</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-box-seam fs-2 text-gray-300 text-muted opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Products List -->
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white">
                <h6 class="m-0 font-weight-bold text-primary">My Products</h6>
                <a href="/seller/products/add" class="btn btn-sm btn-primary shadow-sm"><i class="bi bi-plus-lg text-white-50"></i> Add Product</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4">Product</th>
                                <th class="border-0">Category</th>
                                <th class="border-0">Price</th>
                                <th class="border-0">Stock</th>
                                <th class="border-0 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Products == null)
                            {
                                <tr><td colspan="5" class="text-center py-4"><span class="spinner-border spinner-border-sm text-primary"></span></td></tr>
                            }
                            else if (!Products.Any())
                            {
                                 <tr><td colspan="5" class="text-center py-4 text-muted">No products found. Add your first product!</td></tr>
                            }
                            else
                            {
                                @foreach (var product in Products)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" class="rounded me-3 border" width="40" height="40" style="object-fit: cover;">
                                                }
                                                else
                                                {
                                                     <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-image text-muted small"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-bold">@product.Title</div>
                                                    <div class="small text-muted text-truncate" style="max-width: 200px;">@product.Description</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-light text-dark border">@product.Category</span></td>
                                        <td>@product.Price.ToString("C")</td>
                                        <td>
                                            @if(product.Stock < 5)
                                            {
                                                <span class="text-danger fw-bold">@product.Stock (Low)</span>
                                            }
                                            else
                                            {
                                                <span>@product.Stock</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a href="/seller/products/edit/@product.Id" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProduct(product.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ShowDeleteConfirmation)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Product</h5>
                    <button type="button" class="btn-close" @onclick="() => ShowDeleteConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this product? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => ShowDeleteConfirmation = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Product>? Products;
    private List<Order> RecentOrders = new();
    private decimal TotalRevenue = 0;
    private int TotalOrders = 0;
    
    private bool ShowDeleteConfirmation = false;
    private Guid ProductToDeleteId;
    private Guid SellerId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out SellerId))
            {
                await LoadData();
            }
        }
    }

    private async Task LoadData()
    {
        Products = await ProductService.GetSellerProductsAsync(SellerId);
        
        // In a real app we'd have a specialized query for stats to avoid fetching all orders
        var orders = await OrderService.GetSellerOrdersAsync(SellerId);
        TotalOrders = orders.Count();
        
        // Calculate revenue (simplified: summing total of orders where this seller has items)
        // Note: Ideally we should only sum items belonging to THIS seller if orders are mixed,
        // but for now assuming order splitting or simple logic
        // Let's iterate items to be precise if we can, but OrderService.GetSellerOrdersAsync usually returns Orders containing items from that seller.
        
        TotalRevenue = 0;
        foreach(var order in orders)
        {
            // Calculate revenue from items belonging to this seller
             foreach(var item in order.Items)
             {
                 if (item.Product?.SellerId == SellerId)
                 {
                     TotalRevenue += item.UnitPrice * item.Quantity;
                 }
             }
        }
    }

    private void DeleteProduct(Guid id)
    {
        ProductToDeleteId = id;
        ShowDeleteConfirmation = true;
    }

    private async Task ConfirmDelete()
    {
        await ProductService.DeleteProductAsync(ProductToDeleteId);
        ShowDeleteConfirmation = false;
        await LoadData();
    }
}
