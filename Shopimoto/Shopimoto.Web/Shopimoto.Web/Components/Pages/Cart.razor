@page "/cart"
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Buyer")]
@inject ICartService CartService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="row mb-5 fade-in">
    <div class="col-12 text-center">
        <h2 class="display-5 fw-bold text-primary mb-3">Your Shopping Cart</h2>
        <p class="text-muted lead">Review your items before checkout.</p>
    </div>
</div>

@if (IsLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Fetching your cart...</p>
    </div>
}
else if (UserCart == null || !UserCart.Items.Any())
{
    <div class="text-center py-5 animate-fade-in">
        <div class="mb-4">
            <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
        </div>
        <h3 class="text-muted fw-bold">Your cart is empty</h3>
        <p class="mb-4">Looks like you haven't added anything yet.</p>
        <a href="/" class="btn btn-primary btn-lg shadow-sm">
            Start Shopping
        </a>
    </div>
}
else
{
    <div class="row g-4 justify-content-center animate-fade-in">
        <div class="col-lg-8">
            <div class="card shadow border-0 overflow-hidden">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 text-uppercase text-secondary small fw-bold border-0">Product</th>
                                    <th class="py-3 text-uppercase text-secondary small fw-bold border-0 text-center">Quantity</th>
                                    <th class="py-3 text-uppercase text-secondary small fw-bold border-0 text-end">Total</th>
                                    <th class="pe-4 py-3 border-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in UserCart.Items)
                                {
                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                                {
                                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Title" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                <div>
                                                    <h6 class="mb-0 fw-bold text-dark">@item.Product.Title</h6>
                                                    <small class="text-muted">@item.Product.Price.ToString("C")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3 text-center">
                                            <div class="d-flex justify-content-center align-items-center gap-2">
                                                <button class="btn btn-sm btn-secondary p-1 rounded-circle" style="width: 28px; height: 28px;" @onclick="() => DecreaseQuantity(item)">
                                                    -
                                                </button>
                                                <span class="fw-bold mx-1">@item.Quantity</span>
                                                <button class="btn btn-sm btn-secondary p-1 rounded-circle" style="width: 28px; height: 28px;" @onclick="() => IncreaseQuantity(item)">
                                                    +
                                                </button>
                                            </div>
                                        </td>
                                        <td class="py-3 text-end fw-bold text-primary">
                                            @((item.Product.Price * item.Quantity).ToString("C"))
                                        </td>
                                        <td class="pe-4 py-3 text-end">
                                            <button class="btn btn-link text-danger p-0" @onclick="() => RemoveItem(item)">
                                                Remove
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Panel -->
        <div class="col-lg-4">
            <div class="card shadow border-0 p-4 sticky-top" style="top: 100px;">
                <h5 class="fw-bold mb-4">Order Summary</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Subtotal</span>
                    <span class="fw-bold">@UserCart.Items.Sum(i => i.Product.Price * i.Quantity).ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span class="text-muted">Shipping</span>
                    <span class="text-success fw-bold">Free</span>
                </div>
                <hr class="my-3">
                <div class="d-flex justify-content-between mb-4">
                    <span class="h5 fw-bold mb-0">Total</span>
                    <span class="h5 fw-bold text-primary mb-0">@UserCart.Items.Sum(i => i.Product.Price * i.Quantity).ToString("C")</span>
                </div>
                <button class="btn btn-primary w-100 py-3 shadow-sm mb-3" @onclick="ProceedToCheckout">
                    Proceed to Checkout
                </button>
                <a href="/" class="btn btn-secondary w-100 py-3">
                    Continue Shopping
                </a>
            </div>
        </div>
    </div>
}

@code {
    private Shopimoto.Domain.Entities.Cart? UserCart;
    private bool IsLoading = true;
    private Guid BuyerId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid userId))
            {
                BuyerId = userId;
                await LoadCart();
            }
        }
        else
        {
            // Redirect to login handled by [Authorize]
        }
        
        IsLoading = false;
    }

    private async Task LoadCart()
    {
        UserCart = await CartService.GetOrCreateCartAsync(BuyerId);
    }

    private async Task IncreaseQuantity(CartItem item)
    {
        await CartService.UpdateQuantityAsync(item.Id, item.Quantity + 1);
        await LoadCart();
    }

    private async Task DecreaseQuantity(CartItem item)
    {
        if (item.Quantity > 1)
        {
            await CartService.UpdateQuantityAsync(item.Id, item.Quantity - 1);
        }
        else
        {
            await RemoveItem(item);
        }
        await LoadCart();
    }

    private async Task RemoveItem(CartItem item)
    {
        await CartService.RemoveItemAsync(item.Id);
        await LoadCart();
    }

    private void ProceedToCheckout()
    {
        NavigationManager.NavigateTo("/checkout");
    }
}
