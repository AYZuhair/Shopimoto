@page "/account/wishlist"
@using Shopimoto.Application.Interfaces
@using Shopimoto.Domain.Entities
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IWishlistService WishlistService
@inject ICartService CartService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container fade-in">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="display-5 fw-bold text-primary mb-3">My Wishlist</h2>
            <p class="text-muted lead">Save items for later.</p>
        </div>
    </div>

    @if (IsLoading)
    {
         <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (WishlistItems == null || !WishlistItems.Any())
    {
        <div class="text-center py-5 bg-light rounded animate-fade-in">
            <i class="bi bi-heart text-muted opacity-25" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Your wishlist is empty</h4>
            <a href="/" class="btn btn-primary mt-3">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="row g-4 animate-fade-in">
            @foreach (var item in WishlistItems)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 shadow-sm border-0 position-relative">
                        <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 rounded-circle shadow-sm text-danger" 
                                @onclick="() => RemoveFromWishlist(item.ProductId)" title="Remove">
                            <i class="bi bi-x-lg"></i>
                        </button>
                        
                         @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                        {
                            <img src="@item.Product.ImageUrl" class="card-img-top" alt="@item.Product.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">
                                <a href="/product/@item.ProductId" class="text-decoration-none text-dark">@item.Product?.Title</a>
                            </h5>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="h5 fw-bold text-primary mb-0">@item.Product?.Price.ToString("C")</span>
                                <button class="btn btn-outline-primary btn-sm" @onclick="() => AddToCart(item.ProductId)">
                                    <i class="bi bi-cart-plus me-1"></i> Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Wishlist> WishlistItems = new();
    private bool IsLoading = true;
    private Guid UserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            var idClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (idClaim != null && Guid.TryParse(idClaim.Value, out UserId))
            {
                await LoadWishlist();
            }
        }
        IsLoading = false;
    }

    private async Task LoadWishlist()
    {
        WishlistItems = await WishlistService.GetUserWishlistAsync(UserId);
    }

    private async Task RemoveFromWishlist(Guid productId)
    {
        await WishlistService.RemoveFromWishlistAsync(UserId, productId);
        await LoadWishlist();
    }
    
    private async Task AddToCart(Guid productId)
    {
        await CartService.AddToCartAsync(UserId, productId, 1);
        NavigationManager.NavigateTo("/cart");
    }
}
